[Unit]
Description=Gainmaster User Measurement Service instance %i

Requires=etcd.service
After=etcd.service

Requires=docker.service
After=docker.service

Requires=registrator.service
After=registrator.service

Requires=gainmaster-user-measurement-service-vulcand-registrator@%i.service
Before=gainmaster-user-measurement-service-vulcand-registrator@%i.service

[Service]
TimeoutStartSec=0
KillMode=none
EnvironmentFile=/etc/metadata

ExecStartPre=-/usr/bin/docker kill gainmaster-user-measurement-service
ExecStartPre=-/usr/bin/docker rm gainmaster-user-measurement-service
ExecStartPre=/usr/bin/docker pull bachelorthesis/gainmaster-user-measurement-service

ExecStart=/usr/bin/docker run --name gainmaster-user-measurement-service \
  -p ${PRIVATE_IPV4}::8080 \
  -e SERVICE_NAME=gainmaster-user-measurement-service \
  -e SERVICE_ID=%i \
  bachelorthesis/gainmaster-user-measurement-service

ExecStartPost=/usr/bin/bash -c '\
  until (/usr/bin/etcdctl get /registrator/gainmaster-user-measurement-service/%i); do \
    sleep 3; \
  done; \
  echo SERVICE_ADDRESS=http://$(/usr/bin/etcdctl get /registrator/gainmaster-user-measurement-service/%i) > /tmp/gainmaster_user_measurement_service_env'

ExecStop=/usr/bin/docker stop gainmaster-user-measurement-service

[X-Fleet]
Conflicts=gainmaster-user-measurement-service@*.service