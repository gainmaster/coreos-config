[Unit]
Description=Gainmaster User Service instance %i

Requires=etcd.service
After=etcd.service

Requires=docker.service
After=docker.service

Requires=registrator.service
After=registrator.service

Requires=gainmaster-user-service-vulcand-registrator@%i.service
Before=gainmaster-user-service-vulcand-registrator@%i.service

[Service]
TimeoutStartSec=0
KillMode=none
EnvironmentFile=/etc/metadata

ExecStartPre=-/usr/bin/docker kill gainmaster-user-service
ExecStartPre=-/usr/bin/docker rm gainmaster-user-service
ExecStartPre=/usr/bin/docker pull gainmaster/gainmaster-user-service

ExecStart=/usr/bin/docker run --name gainmaster-user-service \
  --env SERVICE_NAME=gainmaster-user-service \
  --env SERVICE_ID=%i \
  --publish ${PRIVATE_IPV4}::8080 \
  gainmaster/gainmaster-user-service

ExecStartPost=/usr/bin/bash -c '\
  until (etcdctl get /registrator/gainmaster-user-service/%i); do \
    sleep 3; \
  done; \
  echo SERVICE_ADDRESS=http://$(etcdctl get /registrator/gainmaster-user-service/%i) > /tmp/gainmaster_user_service_env'

ExecStop=/usr/bin/docker stop gainmaster-user-service

[X-Fleet]
Conflicts=gainmaster-user-service@*.service
