[Unit]
Description=nginx service for Gainmaster frontend id %i

Requires=etcd.service
After=etcd.service

Requires=docker.service
After=docker.service

Requires=gainmaster-frontend-registrator@%i.service
Before=gainmaster-frontend-registrator@%i.service

BindsTo=gainmaster-frontend-angular@%i.service
After=gainmaster-frontend-angular@%i.service

[Service]
TimeoutStartSec=0
KillMode=none
EnvironmentFile=/etc/metadata

ExecStartPre=-/usr/bin/docker kill gainmaster-frontend-nginx.%i
ExecStartPre=-/usr/bin/docker rm gainmaster-frontend-nginx.%i
ExecStartPre=/usr/bin/docker pull bachelorthesis/nginx

ExecStart=/usr/bin/docker run -rm --name gainmaster-frontend-nginx.%i \
  --volumes-from angularjs \
  -p ${PRIVATE_IP}::80 \
  -e SERVICE_NAME=gainmaster-frontend-nginx \
  -e SERVICE_ID=%i \
  bachelorthesis/nginx
  
ExecStartPost=/usr/bin/bash -c '\
  until (/usr/bin/etcdctl get /registrator/gainmaster-frontend-nginx/%i); do \
    sleep 3; \
  done; \
  echo NGINX_ADDRESS=http://$(/usr/bin/etcdctl get /registrator/gainmaster-frontend-nginx/%i) > /tmp/gainmaster_frontend_env'

ExecStop=/usr/bin/docker stop gainmaster-frontend-nginx.%i

[X-Fleet]
Conflicts=gainmaster-frontend-nginx@*.service
MachineOf=gainmaster-frontend-angular@%i.service